.page {
  background-color: #f4f6fb;
  min-height: 100vh;
  padding: 40rpx 32rpx 80rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2933;
}

.subtitle {
  margin-top: 12rpx;
  font-size: 30rpx;
  color: #52606d;
  line-height: 1.4;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 32rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #162447;
  margin-bottom: 24rpx;
}

.upload-area {
  border: 2rpx dashed #3a6df0;
  border-radius: 18rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #3a6df0;
  background: rgba(58, 109, 240, 0.08);
}

.upload-area .hint {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #67748e;
}

.upload-status {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #52606d;
}

.upload-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 20rpx;
}

.upload-item {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 20rpx rgba(15, 23, 42, 0.12);
}

.upload-thumb {
  width: 100%;
  height: 100%;
}

.upload-remove {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: rgba(239, 68, 68, 0.85);
  color: #ffffff;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
}

.section {
  margin-bottom: 24rpx;
}

.field {
  margin-bottom: 24rpx;
}

.field-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.labs-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.label {
  font-size: 32rpx;
  color: #506176;
  margin-bottom: 14rpx;
  font-weight: 600;
}

input {
  width: 100%;
  background: #f4f7ff;
  border-radius: 16rpx;
  padding: 28rpx 24rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  min-height: 96rpx;
  line-height: 44rpx;
}

input:focus {
  border-color: #688af7;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 80rpx;
}

.radio-item {
  background: #f4f7ff;
  padding: 18rpx 22rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  color: #1f2933;
}

.lifestyle-group {
  margin-bottom: 18rpx;
}

.lifestyle-title {
  font-size: 30rpx;
  color: #364152;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.option-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.option-chip {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e2e8f0;
  background: #ffffff;
  color: #1f2933;
  font-size: 30rpx;
  transition: all 0.18s ease;
}

.option-chip.checked {
  background: rgba(58, 109, 240, 0.12);
  border-color: rgba(58, 109, 240, 0.6);
  color: #1c2a5a;
  font-weight: 600;
}

.option-chip:active {
  transform: scale(0.98);
}

.option-icon {
  font-size: 30rpx;
  color: #2563eb;
}

.option-label {
  font-size: 30rpx;
}

.tcm-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.tcm-item {
  background: #f4f7ff;
  border-radius: 18rpx;
  padding: 20rpx;
}

.tcm-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.tcm-label {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2933;
}

.tcm-value {
  font-size: 34rpx;
  color: #3565f8;
  font-weight: 600;
}

.tcm-desc {
  font-size: 28rpx;
  color: #67748e;
  margin-bottom: 12rpx;
}

slider {
  margin-top: 4rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.actions button {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 18rpx;
  font-size: 34rpx;
  font-weight: 600;
}

.primary {
  background: linear-gradient(135deg, #5c7cfa, #3a6df0);
  color: #ffffff;
  border: none;
}

.secondary {
  background: #eef2ff;
  color: #3a6df0;
  border: none;
}

.result .summary-line {
  font-size: 28rpx;
  color: #27303f;
  margin-bottom: 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #1f2933;
  margin-bottom: 12rpx;
}

.summary-text {
  white-space: pre-line;
  font-size: 26rpx;
  color: #364152;
  line-height: 1.6;
}

.detail-row {
  font-size: 26rpx;
  color: #364152;
  margin-bottom: 8rpx;
}

.detail-subtitle {
  font-size: 26rpx;
  font-weight: 600;
  margin: 16rpx 0 8rpx;
  color: #162447;
}

.herb-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
}

.herb-item {
  background: #eef2ff;
  border-radius: 12rpx;
  padding: 12rpx 16rpx;
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #27303f;
}

.bullet-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.bullet-item {
  position: relative;
  padding-left: 28rpx;
  font-size: 26rpx;
  color: #374151;
  line-height: 1.5;
}

.bullet-item::before {
  content: 'â€¢';
  position: absolute;
  left: 8rpx;
  top: 0;
  color: #3a6df0;
}

.bullet-list.danger .bullet-item {
  color: #b91c1c;
}

.bullet-list.danger .bullet-item::before {
  color: #e11d48;
}

.bullet-list.notice .bullet-item {
  color: #0f172a;
  font-size: 24rpx;
}

.safety-chip {
  display: inline-flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.safety-safe {
  background: rgba(16, 185, 129, 0.15);
  color: #047857;
}

.safety-low {
  background: rgba(251, 191, 36, 0.18);
  color: #b45309;
}

.safety-medium {
  background: rgba(248, 180, 0, 0.2);
  color: #b45309;
}

.safety-high {
  background: rgba(248, 113, 113, 0.22);
  color: #b91c1c;
}

.safety-unknown {
  background: rgba(148, 163, 184, 0.22);
  color: #475569;
}

.match-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.match-item {
  background: #f8fafc;
  border-radius: 14rpx;
  padding: 16rpx;
  font-size: 24rpx;
  color: #475569;
  border: 2rpx solid #e2e8f0;
}

.analysis-wrapper {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  margin-top: 24rpx;
}

.analysis-banner {
  background: linear-gradient(135deg, #5376ff 0%, #6a5eff 100%);
  border-radius: 28rpx;
  padding: 40rpx 32rpx;
  color: #ffffff;
  box-shadow: 0 18rpx 40rpx rgba(74, 102, 255, 0.25);
}

.banner-top {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  margin-bottom: 24rpx;
}

.banner-title {
  font-size: 38rpx;
  font-weight: 600;
}

.banner-score {
  font-size: 30rpx;
  background: rgba(255, 255, 255, 0.18);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-weight: 500;
}

.banner-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 18rpx;
}

.banner-chip {
  background: rgba(255, 255, 255, 0.18);
  padding: 12rpx 24rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.banner-chip.severity-danger {
  background: rgba(255, 71, 87, 0.25);
}

.banner-chip.severity-warning {
  background: rgba(255, 176, 0, 0.25);
}

.banner-chip.severity-mild {
  background: rgba(59, 130, 246, 0.25);
}

.banner-chip.severity-good {
  background: rgba(16, 185, 129, 0.25);
}

.banner-chip.severity-neutral {
  background: rgba(255, 255, 255, 0.18);
}

.banner-desc {
  font-size: 30rpx;
  line-height: 1.6;
  opacity: 0.95;
  white-space: pre-line;
}

.pretty-section {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding-left: 8rpx;
}

.section-icon {
  font-size: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #162447;
}

.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 26rpx;
  box-shadow: 0 14rpx 28rpx rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 22rpx;
}

.plan-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #1f2933;
}

.plan-subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-top: -8rpx;
}

.pill-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 14rpx;
}

.pill {
  background: #f1f5ff;
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  display: flex;
  flex-direction: column;
  min-width: 200rpx;
  box-shadow: inset 0 0 0 1rpx rgba(88, 115, 255, 0.18);
}

.pill-name {
  font-size: 30rpx;
  color: #1c2a5a;
  font-weight: 600;
}

.pill-dose {
  font-size: 26rpx;
  color: #516896;
  margin-top: 6rpx;
}

.pill-effect {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 8rpx;
  line-height: 1.4;
  font-style: italic;
}

.info-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: #f7f9ff;
  border-radius: 14rpx;
  padding: 16rpx 20rpx;
}

.info-label {
  font-size: 28rpx;
  font-weight: 600;
  color: #1c2a5a;
  min-width: 120rpx;
}

.info-value {
  font-size: 28rpx;
  color: #3a4b73;
  flex: 1;
  line-height: 1.5;
}

.bullet-section {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.bullet-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2933;
}

.bullet-section.danger .bullet-title {
  color: #b91c1c;
}

.bullet-section.notice .bullet-title {
  color: #1c2a5a;
}

.advice-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.advice-chip {
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
  border-radius: 999rpx;
  padding: 14rpx 24rpx;
  font-size: 28rpx;
}

.safety-banner {
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  background: rgba(37, 99, 235, 0.08);
}

.safety-banner.safety-danger,
.safety-banner.safety-high {
  background: rgba(248, 113, 113, 0.22);
}

.safety-banner.safety-medium,
.safety-banner.safety-warning {
  background: rgba(251, 191, 36, 0.22);
}

.safety-banner.safety-low,
.safety-banner.safety-neutral,
.safety-banner.safety-unknown {
  background: rgba(148, 163, 184, 0.2);
}

.safety-banner.safety-safe,
.safety-banner.safety-good {
  background: rgba(16, 185, 129, 0.2);
}

.safety-level {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2933;
}

.safety-desc {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.6;
}
