page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.container {
  display: flex;
  flex-direction: column;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  min-height: 100vh;
}

/* 头部区域 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 400;
}

/* 上传区域 */
.upload-section {
  margin-bottom: 40rpx;
}

.upload-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  border: 3rpx dashed #e0e7ff;
  transition: all 0.3s ease;
  margin-bottom: 32rpx;
}

.upload-card:active {
  transform: scale(0.98);
  background: #f8faff;
}

.upload-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 12rpx;
}

.upload-hint {
  font-size: 24rpx;
  color: #64748b;
}

/* 状态提示 */
.status-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  backdrop-filter: blur(10rpx);
}

.status-indicator {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.status-indicator.loading {
  background: #3b82f6;
  animation: pulse 1.5s infinite;
}

.status-indicator.success {
  background: #10b981;
}

.status-indicator.error {
  background: #ef4444;
}

.status-text {
  font-size: 28rpx;
  color: #374151;
  font-weight: 500;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 结果展示区域 */
.result-area {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

/* 分析类型指示器 */
.analysis-type-indicator {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, #e0f2fe 0%, #bae6fd 100%);
  border: 1rpx solid #7dd3fc;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.indicator-icon {
  font-size: 24rpx;
  margin-right: 12rpx;
}

.indicator-text {
  font-size: 24rpx;
  color: #0369a1;
  font-weight: 600;
}

/* 免责声明 */
.disclaimer {
  display: flex;
  align-items: flex-start;
  padding: 32rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border: 2rpx solid #f59e0b;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
}

.disclaimer-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.disclaimer-text {
  flex: 1;
}

.disclaimer-title {
  display: block;
  font-size: 28rpx;
  font-weight: 700;
  color: #92400e;
  margin-bottom: 12rpx;
}

.disclaimer-content {
  font-size: 24rpx;
  line-height: 1.6;
  color: #a16207;
}

/* 章节样式 */
.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e293b;
}

/* 关键指标网格 */
.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280rpx, 1fr));
  gap: 20rpx;
}

.metric-card {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid #bae6fd;
  text-align: center;
}

.metric-name {
  font-size: 26rpx;
  font-weight: 600;
  color: #0c4a6e;
  margin-bottom: 12rpx;
}

.metric-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #0369a1;
  margin-bottom: 8rpx;
}

.metric-unit {
  font-size: 24rpx;
  font-weight: 400;
  color: #64748b;
}

.metric-reference {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.4;
}

/* 异常项列表 */
.abnormal-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.abnormal-card {
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid #fecaca;
}

.abnormal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.abnormal-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #991b1b;
}

.abnormal-status {
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.abnormal-status.high {
  background: #fecaca;
  color: #dc2626;
}

.abnormal-status.low {
  background: #dbeafe;
  color: #2563eb;
}

.abnormal-status.normal {
  background: #d1fae5;
  color: #059669;
}

.abnormal-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.abnormal-value,
.abnormal-reference,
.abnormal-note {
  font-size: 24rpx;
  color: #7f1d1d;
  line-height: 1.4;
}

/* 综合建议 */
.summary-card {
  background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
  padding: 32rpx;
  border-radius: 16rpx;
  border: 1rpx solid #bbf7d0;
}

.summary-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #166534;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.5;
}

/* 分析中状态 */
.analyzing-state {
  text-align: center;
  padding: 80rpx 40rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 24rpx;
  backdrop-filter: blur(10rpx);
}

.analyzing-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  animation: bounce 2s infinite;
}

.analyzing-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
  margin-bottom: 16rpx;
}

.analyzing-desc {
  font-size: 28rpx;
  color: #64748b;
  line-height: 1.5;
  margin-bottom: 40rpx;
}

.loading-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background: #3b82f6;
  border-radius: 50%;
  animation: loading 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
  40% { transform: translateY(-20rpx); }
  60% { transform: translateY(-10rpx); }
}

@keyframes loading {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #e5e7eb;
}

.retry-button,
.regenerate-button,
.new-analysis-button {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.retry-button {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(245, 158, 11, 0.3);
}

.retry-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.4);
}

.regenerate-button {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(139, 92, 246, 0.3);
}

.regenerate-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.4);
}

.new-analysis-button {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(59, 130, 246, 0.3);
}

.new-analysis-button:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.4);
}