.page {
  background-color: #f4f6fb;
  min-height: 100vh;
  padding: 40rpx 32rpx 120rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #1f2933;
}

.subtitle {
  margin-top: 12rpx;
  font-size: 30rpx;
  color: #52606d;
  line-height: 1.4;
}

/* 推荐配方卡片 */
.prescription-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 32rpx;
}

.prescription-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.prescription-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.prescription-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #162447;
}

.prescription-info {
  background: #f8fafc;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  margin-bottom: 12rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #64748b;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #1f2933;
  font-weight: 600;
}

/* 中药列表 */
.herbs-section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2933;
  margin-bottom: 20rpx;
}

.herbs-list {
  background: #f8fafc;
  border-radius: 16rpx;
  overflow: hidden;
}

.herb-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #e2e8f0;
  background: #ffffff;
}

.herb-item:last-child {
  border-bottom: none;
}

.herb-info {
  flex: 1;
}

.herb-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2933;
  margin-bottom: 8rpx;
}

.herb-dose {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.herb-effect {
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.4;
}

.herb-price {
  display: flex;
  align-items: baseline;
  margin-left: 20rpx;
}

.price-symbol {
  font-size: 24rpx;
  color: #ef4444;
  font-weight: 600;
}

.price-value {
  font-size: 32rpx;
  color: #ef4444;
  font-weight: 700;
}

/* 安全提示 */
.safety-section {
  background: #fef7f0;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 6rpx solid #f59e0b;
}

.safety-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.safety-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.safety-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #92400e;
}

.safety-content {
  padding-left: 48rpx;
}

.safety-level {
  font-size: 28rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 12rpx;
}

.safety-level.safety-low {
  background: #d1fae5;
  color: #065f46;
}

.safety-level.safety-medium {
  background: #fef3c7;
  color: #92400e;
}

.safety-level.safety-high {
  background: #fee2e2;
  color: #991b1b;
}

.safety-level.safety-neutral {
  background: #e5e7eb;
  color: #374151;
}

.safety-desc {
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.5;
}

/* 购买选项 */
.purchase-options {
  margin-bottom: 32rpx;
}

.option-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s ease;
}

.option-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(15, 23, 42, 0.1);
}

.option-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.option-content {
  flex: 1;
}

.option-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2933;
  margin-bottom: 6rpx;
}

.option-desc {
  font-size: 26rpx;
  color: #64748b;
}

.option-arrow {
  font-size: 32rpx;
  color: #94a3b8;
  font-weight: bold;
}

/* 购买须知 */
.notice-section {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 4rpx 16rpx rgba(15, 23, 42, 0.06);
}

.notice-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2933;
  margin-bottom: 20rpx;
}

.notice-list {
  padding-left: 20rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.notice-item:last-child {
  margin-bottom: 0;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 24rpx 32rpx;
  box-shadow: 0 -4rpx 16rpx rgba(15, 23, 42, 0.08);
  display: flex;
  gap: 20rpx;
}

.back-button {
  flex: 1;
  background: #f1f5f9;
  color: #475569;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.contact-button {
  flex: 2;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.3);
}

.back-button:active,
.contact-button:active {
  transform: scale(0.98);
}
